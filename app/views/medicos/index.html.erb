<p id="notice"><%= notice %></p>

<h1>Cadastro de Medicos</h1>
<body>
  <center><%= image_tag"bem vindo.jpg" %></center>
</body>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Endereco</th>
      <th>Telefone</th>
      <th>Formacao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @medicos.each do |medico| %>
      <tr>
        <td><%= medico.nome %></td>
        <td><%= medico.endereco %></td>
        <td><%= medico.telefone %></td>
        <td><%= medico.formacao %></td>
        <td><%= link_to 'Mostrar', medico %></td>
        <td><%= link_to 'Editar', edit_medico_path(medico) %></td>
        <td><%= link_to 'Excluir', medico, method: :delete, data: { confirm: 'Voce tem certeza?' } %></td>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Medico', new_medico_path %>
<%= link_to 'Consulta', consultas_path %>
<%= link_to 'Paciente', pacientes_path %>

