<p id="notice"><%= notice %></p>

<h1>Cadastro de Pacientes</h1>
<body>
  <center><%= image_tag"bem vindo.jpg" %></center>
</body>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Endereco</th>
      <th>Telefone</th>
      <th>Doenca</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pacientes.each do |paciente| %>
      <tr>
        <td><%= paciente.nome %></td>
        <td><%= paciente.endereco %></td>
        <td><%= paciente.telefone %></td>
        <td><%= paciente.doenca %></td>
        <td><%= link_to 'Mostrar', paciente %></td>
        <td><%= link_to 'Editar', edit_paciente_path(paciente) %></td>
        <td><%= link_to 'Excluir', paciente, method: :delete, data: { confirm: 'Voce tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Paciente', new_paciente_path %>
<%= link_to 'Medico', medicos_path %>
<%= link_to 'Consultas', consultas_path %>
